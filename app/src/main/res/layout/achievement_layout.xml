<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/achievement_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#a8ffac"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:paddingRight="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/achievement_icon"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#6ed373"
            android:padding="5dp"
            app:srcCompat="@drawable/first_walk_unlocked" />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/achievement_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="#6ed373"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="15dp"
                android:paddingEnd="5dp"
                android:text="Achievement name"
                android:textAlignment="center"
                android:textColor="#FFD800"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/achievement_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#6ed373"
                android:text="Achievement description"
                android:textAlignment="center"
                android:textColor="#FFD800" />
        </LinearLayout>

        <TextView
            android:id="@+id/achievement_progress"
            android:layout_width="20dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="#6ed373"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="35dp"
            android:paddingEnd="5dp"
            android:text="1/1"
            android:textAlignment="center"
            android:textColor="#FFD800"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/achievement_progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

</LinearLayout>